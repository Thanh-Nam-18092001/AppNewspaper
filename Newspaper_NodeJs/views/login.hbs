    .img {
        width: 100%;
        height: 100%;
        border-top-left-radius: 30px;
        border-bottom-left-radius: 30px;
    }

    .right {
        width: 40%;
        background-color: white;
        border-top-right-radius: 30px;
        border-bottom-right-radius: 30px;
        box-shadow: 0 0 10px grey;

    }

    .textWelcome {
        width: 150px;
        height: 40px;
        background-color: #27B6D7;
        border-top-right-radius: 30px;
        border-bottom-right-radius: 30px;
        box-shadow: 0 0 5px grey;

    }

    .text {
        padding-top: 10px;
        padding-left: 10px;
        font-size: 18px;
        color: white;
        font-weight: bold;
    }

    .fromRight {
        text-align: center;
    }

    .titleRight {
        color: #27B6D7;
        font-weight: bold;
        margin-top: 15%;
    }

    .fromInput {
        background-color: #F8F8F8;
        border: 1px solid #F8F8F8;
        width: 70%;
        height: 40px;
        margin-top: 10px;
        border-radius: 10px;
        padding-left: 10px;
    }

    .fromInput1 {
        background-color: #F8F8F8;
        border: 1px solid #F8F8F8;
        width: 70%;
        height: 40px;
        margin-top: 40px;
        border-radius: 10px;
    }

    .btn_Container {
        margin-top: 40px;
    }

    .btn {
        margin-top: 5px;
        width: 35%;
        height: 45px;
        background-color: #27B6D7;
        border: 1px solid #27B6D7;
        border-radius: 20px;
    }

    .btn:hover {
        background-color: white;
    }

    .textLogin {
        font-size: 16px;
        font-weight: bold;
        margin-top: 12px;
        color: white;
    }
</style>

