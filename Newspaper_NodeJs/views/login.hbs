</head>

<body>
    <div class="container">

        <div class="left">
            <img src="https://giffiles.alphacoders.com/567/5673.gif" class="img">
        </div>

        <div class="right">
            <div class="textWelcome">
                <p class="text">Welcome back</p>
            </div>
            <form method="post" action="/admin/login">
                <div class="fromRight">
                    <h1 class="titleRight">Sign In</h1>
                    <div>
                        <input type="text" name="username" maxlength="15" minlength="4" pattern="^[a-zA-Z0-9_.-]*$"
                            id="login-username" onchange="validation()" placeholder="Username" required
                            class="fromInput">
                        <i class="fa-solid fa-user"
                            style="position: absolute; margin-top: 23px; margin-left: -25px; color: #C0C0C0;">
                        </i>
                    </div>
                    <div>
                        <input id="login-password" name="password" onchange="validation()" required type="password"
                            placeholder="Password" class="fromInput1" style="padding-left: 15px;">
                        <i class="fa-solid fa-lock"
                            style="position: absolute; margin-top: 54px; margin-left: -25px; color: #C0C0C0;">
                        </i>
                    </div>

                    <div class="btn_Container">
                        <button class="btn" type="submit" id="submit" onchange="validation()">
                            <p class="textLogin">Login</p>
                        </button>
                    </div>

                </div>

        </div>
        </form>
    </div>

    </div>
</body>

<style>
