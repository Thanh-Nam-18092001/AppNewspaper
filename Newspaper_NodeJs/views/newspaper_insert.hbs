<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body style="background-color: #F8F8F8;">
    <div>
        <div>
            <h1 style="text-align: center;">Add Newspapers Profile</h1>
        </div>

        <div class="frominsert">
            <form role="form" method="post" action="/newspaper" enctype="multipart/form-data"
                style=" padding-left: 20px; padding-top: 20px;">
                <div class="fromtable">
                    <div class="left">
                        <div class="textinput">
                            <label style="font-weight: bold;">Name: </label>
                            <input id="name" type="text" name="name"
                                style="margin-left: 8px; width:500px; height: 25px;" />
                        </div>

                        <div class="textinput">
                            <label style="font-weight: bold;">Date:</label>
                            <input id="date" type="date" name="date" class="fromkhung" />
                        </div>
                        <div class="textinput">
                            <label style="font-weight: bold;">Time:</label>
                            <input style="margin-left: 10px; width:500px; height: 25px; margin-bottom: 10px;" id="time"
                                type="time" name="time" />
                        </div>
                        <div style="width:550px ;height:300px">
                            <label style="font-weight: bold;">Image: </label>
                            <input id="image-file" class="form-control" onchange="onChangeFile()" name="image"
                                type="file" style="margin-left: 8px; width:500px; height: 25px;" />
                            <img id="image-view" style="display: none; object-fit: cover; margin-top: 5px;" width="550"
                                height="300" src="" />
                        </div>

                        <div class="btnsum">
                            <button type="submit" id="submit" class="btn" style="color: white;">Submit</button>
                            <button type="reset" class="btn" style="color: white;">Reset</button>
                            <button type="button" class="btn"><a href="/newspaper"
                                    style="color: white; text-decoration-line: none;">Cancel</a></button>
                        </div>
                    </div>

                    <div class="right">
                        <div class="textinput">
                            <label style="font-weight: bold;">Category:</label>
                            <select class="form-control" name="category_id" style="width:250px; height: 25px;">
                                {{#each categories}}
                                <option value="{{this._id}}">{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>


                        <div class="textinput">
                            <h4>Content:</h4>
                            <textarea id="contents" type="text" name="contents" style="width: 630px; height: 350px;">
                            </textarea>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

</html>

<style>
    .btn {
        width: 100px;
        height: 30px;
        background-color: aqua;
        border: white;
        border-radius: 5px;
    }

    .btn:hover {
        background-color: rgb(83, 107, 107);
        color: white;
    }

    .btnsum {
        margin-top: 60px;
        margin-bottom: 8px;
    }

    .right {
        width: 50%;
    }

    .left {
        width: 50%;
    }

    .fromkhung {
        width: 500px;
        height: 25px;
        margin-left: 15px;
    }

    .textinput {
        margin-top: 10px
    }

    .fromtable {
        display: flex;
        width: 100%;
    }

    .frominsert {
        background-color: white;
        box-shadow: 0px 0px 10px grey;
        height: '100%';
        border-radius: 10px;
    }
</style>


<script>
    const onChangeFile = () => {
        const file = document.getElementById('image-file').files[0];
        const reader = new FileReader();
        reader.onload = e => {
            document.getElementById('image-view').src = e.target.result;
            document.getElementById('image-view').style.display = 'block';
        }
        reader.readAsDataURL(file);
    }
</script>